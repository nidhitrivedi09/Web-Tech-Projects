<%- include partials/header.ejs %> <%- include partials/main_nav.ejs %>

<!-- Main Content -->
<main class="container" style="margin-top: 5%; margin-bottom: 2%">
  <div class="row">
    <div class="offset-md-1 col-md-10">
      <h1><%= title %></h1>
      <br />

      <!-- Repeatable Template Row -->
      <div>
        <div class="addbtn" style="height: 5%; padding-bottom: 25px">
          <a href="/business-contacts/add/" class="btn"
            ><i class="fas fa-user-plus"></i> Add Contact</a
          >
        </div>
      </div>
      <table class="table table-hover table-striped" style="border-radius: 5px">
        <!-- Header Row-->
        <tr>
          <th scope="col">#</th>
          <th scope="col">Contact Name</th>
          <th scope="col">Contact Number</th>
          <th scope="col">E-mail</th>
          <th scope="col">Actions</th>
        </tr>
        <tbody style="background-color: white">
          <% if(ContactList.length===0) {%>
          <tr>
            <td
              colspan="5"
              style="text-align: center; font-weight: bold; font-size: medium"
            >
              No Data Available!
            </td>
          </tr>
          <%}else {%> 
          <% for(let count = 0; count < ContactList.length; count++){ %>
          <tr>
            
            <td scope="row"><%= count+1%></td>
            <td><%= ContactList[count].contactName %></td>
            <td><%= ContactList[count].contactNumber %></td>
            <td><%= ContactList[count].email %></td>
            <td>
              <a
                href="/business-contacts/edit/<%= ContactList[count]._id %>"
                class="btn btn-sm"
                style="margin-top: 5px"
              >
                <i class="fas fa-user-edit"> </i>
              </a>
              <a
                href="/business-contacts/delete/<%= ContactList[count]._id %>"
                class="btn btn-sm"
                style="margin-top: 5px"
              >
                <i class="far fa-trash-alt"> </i>
              </a>
            </td>
          </tr>
          <% } %> <% } %>
        </tbody>
      </table>
    </div>
  </div>
</main>

<%- include partials/bottom_nav.ejs %> <%- include partials/footer.ejs %>
